<TwoCanvasLayout>:
    orientation: 'horizontal'

    CanvasLeft:             #Blue Wikipedia Search
        size_hint_x: 0.5

    CanvasRight:            #Black Summarizer
        size_hint_x: 0.5




<CanvasLeft@BoxLayout>:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: 0, 0, 0.5, 1  # Dark blue color
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            id: SearchIntro
            text: "Search Your Topic of Interest Here"
            font_size: 20
            pos_hint: {"center_x": 0.5, "y": .05}
        TextInput:                  #User inputs search here
            id: InputFSearch
            multiline: False
            pos_hint: {"x":.25, "y": .45}
            size_hint: .5,.05
        Button:
            id: InputBTN
            pos_hint: {"center_x": .5 , "y": .39}
            size_hint: .25,.05
            text: "Search"


<CanvasRight@BoxLayout>:
    canvas:
        Color:
            rgba: 0, 0, 0, 1  # Black color
        Rectangle:
            pos: self.pos
            size: self.size

